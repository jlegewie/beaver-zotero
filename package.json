{
    "name": "beaver-zotero",
    "type": "module",
    "version": "0.4.2",
    "description": "Academic research agent that lives in Zotero, instantly searching through all your documents and explaining complex concepts as you read.",
    "config": {
        "addonName": "Beaver",
        "addonID": "beaver@jlegewie.com",
        "addonRef": "beaver",
        "addonInstance": "Beaver",
        "prefsPrefix": "extensions.zotero.beaver"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jlegewie/beaver-zotero.git"
    },
    "author": "JL",
    "bugs": {
        "url": "https://github.com/jlegewie/beaver-zotero/issues"
    },
    "homepage": "https://www.beaverapp.ai",
    "license": "AGPL-3.0-or-later",
    "scripts": {
        "start": "concurrently \"zotero-plugin serve\" \"npm run watch-react\"",
        "build": "NODE_ENV=production npm run build-react:prod && zotero-plugin build && tsc --noEmit",
        "build:dev": "NODE_ENV=development npm run build-react:dev && zotero-plugin build && tsc --noEmit",
        "build:staging": "BUILD_ENV=staging npm run build-react:staging && zotero-plugin build && tsc --noEmit",
        "lint:check": "prettier --check . && eslint .",
        "lint:fix": "prettier --write . && eslint . --fix",
        "release": "zotero-plugin release",
        "test": "echo \"Error: no test specified\" && exit 1",
        "update-deps": "npm update --save",
        "build-react": "webpack --config webpack.config.js",
        "build-react:dev": "webpack --config webpack.config.js --mode=development",
        "build-react:prod": "webpack --config webpack.config.js --mode=production",
        "build-react:staging": "BUILD_ENV=staging webpack --config webpack.config.js --mode=production",
        "watch-react": "webpack --config webpack.config.js --watch"
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.27.1",
        "@supabase/supabase-js": "^2.55.0",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "deepmerge": "^4.3.1",
        "jotai": "^2.13.1",
        "p-queue": "^8.1.0",
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^9.1.0",
        "rehype-katex": "^7.0.1",
        "rehype-raw": "^7.0.0",
        "rehype-sanitize": "^6.0.0",
        "remark-gfm": "^4.0.1",
        "remark-math": "^6.0.0",
        "uuid": "^11.0.5",
        "zotero-plugin-toolkit": "^4.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.28.3",
        "@babel/plugin-transform-runtime": "^7.28.3",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@eslint/js": "^9.19.0",
        "@solana/wallet-standard-features": "^1.3.0",
        "@types/lodash": "^4.17.20",
        "@types/node": "^22.13.0",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.6",
        "babel-loader": "^9.2.1",
        "concurrently": "^9.2.0",
        "dotenv": "^16.5.0",
        "eslint": "^9.19.0",
        "eslint-scope": "^8.3.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.1",
        "webpack": "^5.101.2",
        "webpack-cli": "^6.0.1",
        "zotero-plugin-scaffold": "^0.8.0",
        "zotero-types": "^3.1.9"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 2,
        "endOfLine": "lf",
        "overrides": [
            {
                "files": [
                    "*.xhtml"
                ],
                "options": {
                    "htmlWhitespaceSensitivity": "css"
                }
            }
        ]
    }
}
