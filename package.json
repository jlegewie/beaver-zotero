{
    "name": "beaver-zotero",
    "version": "0.0.1",
    "description": "Beaver is a Zotero plugin that...",
    "config": {
        "addonName": "Beaver",
        "addonID": "beaver@jlegewie.com",
        "addonRef": "beaver",
        "addonInstance": "Beaver",
        "prefsPrefix": "extensions.zotero.beaver"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jlegewie/beaver-zotero.git"
    },
    "author": "JL",
    "bugs": {
        "url": "https://github.com/jlegewie/beaver-zotero/issues"
    },
    "homepage": "https://github.com/jlegewie/beaver-zotero#readme",
    "license": "AGPL-3.0-or-later",
    "scripts": {
        "build:svelte": "rollup -c rollup.config.js",
        "start": "zotero-plugin serve",
        "build": "zotero-plugin build && tsc --noEmit",
        "lint:check": "prettier --check . && eslint .",
        "lint:fix": "prettier --write . && eslint . --fix",
        "release": "zotero-plugin release",
        "test": "echo \"Error: no test specified\" && exit 1",
        "update-deps": "npm update --save"
    },
    "dependencies": {
        "zotero-plugin-toolkit": "^4.1.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@rollup/plugin-commonjs": "^28.0.2",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@types/node": "^22.13.5",
        "eslint": "^9.21.0",
        "prettier": "^3.5.2",
        "rollup": "^4.34.8",
        "rollup-plugin-css-only": "^4.5.2",
        "rollup-plugin-svelte": "^7.2.2",
        "svelte": "^3.59.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.1",
        "zotero-plugin-scaffold": "^0.2.4",
        "zotero-types": "^3.1.7"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 2,
        "endOfLine": "lf",
        "overrides": [
            {
                "files": [
                    "*.xhtml"
                ],
                "options": {
                    "htmlWhitespaceSensitivity": "css"
                }
            }
        ]
    }
}
