{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2016",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "zotero-plugin-toolkit/*": ["node_modules/zotero-plugin-toolkit/*"],
      "../../addon/content/reactBundle": ["typings/reactBundle.d.ts"],
      "react": ["node_modules/react"],
      "react/*": ["node_modules/react/*"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["DOM", "ES2016"]
  },
  "include": ["src", "react", "typings", "node_modules/zotero-types"],
  "exclude": ["build", "addon"]
}
